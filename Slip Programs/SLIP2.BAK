/*Write a C++ program to calculate and display perimeter as well as area 
of a square by using Inline function. */

#include <iostream.h>
#include <conio.h>

inline float peri (float l)
{
  return (4*l);
}
inline float area (float l)
{
  return (l*l);
}

void main ()
{
  float l;
  cout<<"Enter The Side :";
  cin>>l;
  cout<<"Area is:" <<area (l)<<endl;
  cout<<"Perimeter is:"<<peri(l)<<endl;
}